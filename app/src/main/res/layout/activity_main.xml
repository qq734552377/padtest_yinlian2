<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_bright"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="平板相关测试"
        android:textSize="35sp" />
    <!-- 边界 -->
    <ImageView style="@style/IvBoradStyle" />

    <LinearLayout
        style="@style/LlStyle"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:padding="0dp">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--蓝牙测试-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/bluetootnBt"
                    style="@style/BtStyle"
                    android:text="蓝牙测试" />

                <ImageView
                    android:id="@+id/bluetoothIv"
                    style="@style/IvStyle" />

            </LinearLayout>

            <ImageView style="@style/IvBoradStyle" />
            <!--二维码-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/erweimaBt"
                    style="@style/BtStyle"
                    android:text="二维码" />

                <ImageView
                    android:id="@+id/erwemaIv"
                    style="@style/IvStyle" />

            </LinearLayout>

            <ImageView style="@style/IvBoradStyle" />
            <!--磁条卡-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/citiaokaBt"
                    style="@style/BtStyle"
                    android:text="磁条卡" />

                <ImageView
                    android:id="@+id/citiaokaIv"
                    style="@style/IvStyle" />

            </LinearLayout>

            <ImageView style="@style/IvBoradStyle" />
            <!--ic卡-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/ickaBt"
                    style="@style/BtStyle"
                    android:text="IC卡" />

                <ImageView
                    android:id="@+id/ickaIv"
                    style="@style/IvStyle" />


            </LinearLayout>

            <ImageView style="@style/IvBoradStyle" />
            <!--NFC-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/nfckaBt"
                    style="@style/BtStyle"
                    android:text="NFC卡" />

                <ImageView
                    android:id="@+id/nfckaIv"
                    style="@style/IvStyle" />


            </LinearLayout>

            <ImageView style="@style/IvBoradStyle" />
            <!--测试打印机-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/dayinjiBt"
                    style="@style/BtStyle"
                    android:text="打印机测试" />

                <ImageView
                    android:id="@+id/dayinjiIv"
                    style="@style/IvStyle" />


            </LinearLayout>

            <ImageView style="@style/IvBoradStyle" />

            <!--测试底座串口-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/chuankouBt"
                    style="@style/BtStyle"
                    android:text="测试底座串口" />

                <ImageView
                    android:id="@+id/chuankouIv"
                    style="@style/IvStyle" />

            </LinearLayout>

            <ImageView style="@style/IvBoradStyle" />
            <!--测试底座钱箱-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/moneyBoxBt"
                    style="@style/BtStyle"
                    android:text="测试钱箱" />

                <ImageView
                    android:id="@+id/moneyBoxIv"
                    style="@style/IvStyle" />

            </LinearLayout>

            <ImageView style="@style/IvBoradStyle" />
            <!--测试Usb-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/usbBt"
                    style="@style/BtStyle"
                    android:text="测试扫描枪" />

                <ImageView
                    android:id="@+id/usbIv"
                    style="@style/IvStyle" />

            </LinearLayout>



            <ImageView style="@style/IvBoradStyle" />
            <!--退出-->
            <LinearLayout style="@style/LlStyle">

                <Button
                    android:id="@+id/exit"
                    style="@style/BtStyle"
                    android:text="退出" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:padding="10dp">

            <FrameLayout
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal" />

        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light" />


    </LinearLayout>

    <ImageView style="@style/IvBoradStyle" />


</LinearLayout>
