<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/base_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="25sp"
        android:text="打印机测试界面,测试开始前请先确保平板与底座的服务已经连接上"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <EditText
            android:id="@+id/base_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="@string/dayinText"
            />
    </ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/base_bt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="打印机状态"
            android:gravity="center"
            style="@style/BtStyle"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/base_bt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="打印文字图片"
            android:gravity="center"
            style="@style/BtStyle"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/base_bt4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试打印图片"
            android:gravity="center"
            style="@style/BtStyle"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
     <!--   <Button
            android:id="@+id/base_bt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="打印文字图片"
            android:gravity="center"
            style="@style/BtStyle"
            />-->
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/base_fail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试失败"
            android:gravity="center"
            style="@style/BtStyle"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/base_sucess"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试成功"
            android:gravity="center"
            style="@style/BtStyle"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
