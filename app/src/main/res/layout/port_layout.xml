<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/base_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="25sp"
        android:text="底座串口测试界面,测试开始前请先确保平板与底座的服务已经连接上"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:id="@+id/base_et1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:hint="请输入波特率"
            android:text="9600"
            android:singleLine="true"
            />
        <Button
            android:id="@+id/base_fasongbote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="提交"
            android:gravity="center"
            style="@style/BtStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <EditText
            android:id="@+id/base_et2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="@string/portdata"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/base_ceshi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="读取升腾密码键盘"
            android:gravity="center"
            style="@style/BtStyle"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >



        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/base_bt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试失败"
            android:gravity="center"
            style="@style/BtStyle"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/base_bt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试成功"
            android:gravity="center"
            style="@style/BtStyle"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
